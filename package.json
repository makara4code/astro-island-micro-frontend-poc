{
  "name": "astro-microfrontends-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Astro microfrontends demo with client-side composition",
  "scripts": {
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "build": "pnpm -r --filter \"!**/server\" build",
    "build:mfes": "pnpm --parallel --filter ./app-react-1 --filter ./app-react-2 --filter ./app-solid --filter ./app-vue build",
    "build:shell": "pnpm --filter ./shell build",
    "build:all": "pnpm --parallel --filter ./app-react-1 --filter ./app-react-2 --filter ./app-solid --filter ./app-vue --filter ./shell build",
    "dev:app-react-1": "pnpm --filter ./app-react-1 dev",
    "dev:app-react-2": "pnpm --filter ./app-react-2 dev",
    "dev:app-solid": "pnpm --filter ./app-solid dev",
    "dev:app-vue": "pnpm --filter ./app-vue dev",
    "dev:shell": "pnpm --filter ./shell dev",
    "serve:mfes": "pnpm --parallel --filter ./app-react-1/server --filter ./app-react-2/server --filter ./app-solid/server --filter ./app-vue/server start",
    "preview:shell": "pnpm --filter ./shell preview",
    "preview:all": "pnpm --parallel --filter ./app-react-1/server --filter ./app-react-2/server --filter ./app-solid/server --filter ./app-vue/server --filter ./shell start",
    "start": "pnpm build:all && pnpm preview:all",
    "dev": "pnpm --parallel --filter ./app-react-1 --filter ./app-react-2 --filter ./app-solid --filter ./app-vue --filter ./shell dev",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}